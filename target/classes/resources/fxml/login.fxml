<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ui.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="18.0">
            <children>
                <Label text="Persistencia Políglota" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="10.0" maxWidth="360">
                    <children>
                        <TextField fx:id="emailField" promptText="Email" />
                        <PasswordField fx:id="passwordField" promptText="Contraseña" />
                        <HBox spacing="10" alignment="CENTER">
                            <children>
                                <Button fx:id="loginButton" text="Iniciar sesión" onAction="#handleLogin" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                                <Button fx:id="registerButton" text="Registrar" onAction="#handleRegister" style="-fx-background-color: #27ae60; -fx-text-fill: white;" />
                            </children>
                        </HBox>
                        <Label fx:id="statusLabel" textFill="#e74c3c" visible="false" wrapText="true"/>
                    </children>
                    <padding>
                        <Insets top="10" right="0" bottom="0" left="0"/>
                    </padding>
                </VBox>
            </children>
        </VBox>
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>
    </center>
</BorderPane>
