<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.LoginController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Persistencia Políglota" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label text="Sistema de Gestión de Sensores" textFill="#7f8c8d">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-background-radius: 10; -fx-padding: 30;">
               <children>
                  <Label text="Iniciar Sesión" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  
                  <TextField fx:id="emailField" promptText="Correo electrónico" prefWidth="250.0" />
                  
                  <PasswordField fx:id="passwordField" promptText="Contraseña" prefWidth="250.0" />
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Entrar" />
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefWidth="100.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Registrar" />
                     </children>
                  </HBox>
                  
                  <Label fx:id="statusLabel" textFill="#e74c3c" visible="false" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
