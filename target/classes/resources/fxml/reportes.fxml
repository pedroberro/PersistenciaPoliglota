<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ui.ReportesController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 12;">
            <children>
                <Label text="Reportes" textFill="WHITE">
                    <font><Font name="System Bold" size="18"/></font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backBtn" text="Volver" onAction="#handleBack" style="-fx-background-color:#e74c3c; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" padding="16">
            <children>
                <HBox spacing="8">
                    <TextField fx:id="ciudadField" promptText="Ciudad"/>
                    <DatePicker fx:id="desdePicker" promptText="Desde"/>
                    <DatePicker fx:id="hastaPicker" promptText="Hasta"/>
                    <ChoiceBox fx:id="tipoReporteChoice" prefWidth="200">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Máximos y mínimos"/>
                                <String fx:value="Promedios"/>
                                <String fx:value="Alertas"/>
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                    <Button fx:id="generarBtn" text="Generar reporte" onAction="#handleGenerarReporte" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                </HBox>

                <TextArea fx:id="reporteArea" prefHeight="360" editable="false" wrapText="true"/>
            </children>
        </VBox>
    </center>
</BorderPane>
