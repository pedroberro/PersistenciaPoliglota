<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ui.DashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #34495e; -fx-padding: 12;">
            <children>
                <Label text="Persistencia Políglota" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="logoutBtn" text="Cerrar sesión" onAction="#handleLogout" style="-fx-background-color:#e74c3c; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" padding="10">
            <children>
                <Button fx:id="btnSensores" text="Sensores" onAction="#openSensores" prefWidth="160" />
                <Button fx:id="btnReportes" text="Reportes" onAction="#openReportes" prefWidth="160"/>
                <Button fx:id="btnFacturacion" text="Facturación" onAction="#openFacturacion" prefWidth="160"/>
                <Separator />
                <Label text="Estadísticas" style="-fx-font-weight: bold;"/>
                <Label fx:id="lblTotalSensores" text="Sensores: -"/>
                <Label fx:id="lblActivos" text="Activos: -"/>
                <Label fx:id="lblAlertas" text="Alertas activas: -"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="12" padding="16">
            <children>
                <Label text="Panel principal" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="summaryTable" prefHeight="380">
                    <columns>
                        <TableColumn fx:id="colMetric" text="Métrica" prefWidth="240"/>
                        <TableColumn fx:id="colValue" text="Valor" prefWidth="200"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
