<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.SensoresController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <children>
                <Label text="Gestión de Sensores" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backButton" text="Volver" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" onAction="#handleBack"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" padding="20">
            <TableView fx:id="sensoresTable" prefHeight="300">
                <columns>
                    <TableColumn fx:id="nombreColumn" text="Nombre"/>
                    <TableColumn fx:id="tipoColumn" text="Tipo"/>
                    <TableColumn fx:id="estadoColumn" text="Estado"/>
                    <TableColumn fx:id="ciudadColumn" text="Ciudad"/>
                    <TableColumn fx:id="paisColumn" text="País"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button fx:id="agregarBtn" text="Agregar" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#handleAgregar"/>
                <Button fx:id="actualizarBtn" text="Actualizar" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleActualizar"/>
                <Button fx:id="eliminarBtn" text="Eliminar" style="-fx-background-color: #f39c12; -fx-text-fill: white;" onAction="#handleEliminar"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
